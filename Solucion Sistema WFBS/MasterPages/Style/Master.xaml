<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:PresentationOptions="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options">

	<Style x:Key="Title" TargetType="ContentPresenter">
		<Setter Property="Control.FontSize" Value="18" />
		<Setter Property="Control.FontFamily" Value="Arial" />
		<Setter Property="Control.FontWeight" Value="Bold" />
		<Setter Property="Control.Foreground" Value="#1B548D" />
		<Setter Property="Margin" Value="0,0,0,10" />
	</Style>
	
	<Style x:Key="Abstract" TargetType="ContentPresenter">
		<Setter Property="Control.Foreground" Value="#ff3e489d" />
		<Setter Property="Margin" Value="0,0,0,10" />
	</Style>

    <Style x:Key="Footer" TargetType="ContentPresenter">
        <Setter Property="Control.FontSize" Value="11" />
        <Setter Property="Control.FontFamily" Value="Arial" />
        <Setter Property="Control.FontWeight" Value="Bold" />
        <Setter Property="Control.Foreground" Value="WhiteSmoke" />
        <Setter Property="Margin" Value="0,0,0,10" />
    </Style>
</ResourceDictionary>